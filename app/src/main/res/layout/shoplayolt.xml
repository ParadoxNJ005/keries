<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    tools:context=".fragments.Shop">

    <!-- Other views here -->


    <ImageView
        android:id="@+id/effeNameLogoImageView"
        android:layout_width="285dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/group_4new"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="67dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_margin="80dp"

        android:backgroundTint="#30808080"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/effeNameLogoImageView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Head Graphic \nPrinted Black "
                android:textSize="24dp"
                android:textColor="@color/white" />


            <TextView
                android:id="@+id/text2"
                android:layout_width="200dp"
                android:layout_height="15dp"

                android:text="T-Shirt"
                android:textColor="#FFA500" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:text="Description"
                android:textSize="24dp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/text4"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:text="  ₹ 1000 /-"
                android:textSize="24dp"
                android:textColor="#FFA500" />



            </LinearLayout>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:src="@drawable/group_4new"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="340dp"
        android:layout_height="200dp"
        android:layout_margin="16dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#30808080"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Head Graphic \nPrinted Black "
                    android:textColor="@color/white"
                    android:textSize="24dp" />


                <TextView
                    android:id="@+id/text6"
                    android:layout_width="200dp"
                    android:layout_height="15dp"

                    android:text="T-Shirt"
                    android:textColor="#FFA500" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="200dp"
                    android:layout_height="75dp"
                    android:text="Description"
                    android:textColor="@color/white"
                    android:textSize="24dp" />
                <TextView
                    android:id="@+id/text8"
                    android:layout_width="200dp"
                    android:layout_height="15dp"
                    android:text="  ₹ 1000 /-"
                    android:textSize="24dp"
                    android:textColor="#FFA500" />


            </LinearLayout>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/group_4new" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
